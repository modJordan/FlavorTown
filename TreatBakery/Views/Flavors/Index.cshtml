@using TreatBakery.Models;

<h1>Flavors</h1>
<hr />
<div class="container">
@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
    {
      <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
    }
  </ul>
}




<p class="button">@Html.ActionLink("Add new flavor", "Create")</p>
<p class="button">@Html.ActionLink("Home", "Index", "Home")</p>
</div>